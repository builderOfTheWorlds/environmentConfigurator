# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf

# Python files should always use LF
*.py text eol=lf

# YAML files should always use LF
*.yaml text eol=lf
*.yml text eol=lf

# Markdown files should always use LF
*.md text eol=lf

# Config files should always use LF
*.conf text eol=lf
*.config text eol=lf
*.ini text eol=lf
*.toml text eol=lf

# Binary files
*.zip binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
