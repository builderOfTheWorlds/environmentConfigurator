#!/bin/bash
# Zsh Setup Management Script
# Manages Oh-My-Zsh installation and configuration

PROJECT_DIR="/mnt/c/Users/matt/PycharmProjects/environmentConfigurator"
INSTALLER="$PROJECT_DIR/scripts/install-ohmyzsh.sh"
ZSHRC="$HOME/.zshrc"

# Colors for output
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

print_header() {
    echo -e "${BLUE}=====================================${NC}"
    echo -e "${BLUE}  Zsh Setup Management${NC}"
    echo -e "${BLUE}=====================================${NC}"
}

print_success() {
    echo -e "${GREEN}✓${NC} $1"
}

print_info() {
    echo -e "${BLUE}ℹ${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}⚠${NC} $1"
}

print_error() {
    echo -e "${RED}✗${NC} $1"
}

show_status() {
    print_header
    echo ""

    # Check Zsh installation
    if command -v zsh &> /dev/null; then
        print_success "Zsh installed: $(zsh --version)"
    else
        print_error "Zsh not installed"
    fi

    # Check current shell
    if [ "$SHELL" = "$(which zsh 2>/dev/null)" ]; then
        print_success "Zsh is the default shell"
    else
        print_warning "Current shell: $SHELL"
    fi

    # Check Oh-My-Zsh
    if [ -d "$HOME/.oh-my-zsh" ]; then
        print_success "Oh-My-Zsh installed"
    else
        print_error "Oh-My-Zsh not installed"
    fi

    # Check .zshrc
    if [ -f "$ZSHRC" ]; then
        print_success ".zshrc exists"

        echo ""
        echo "Current configuration:"

        # Show theme
        theme=$(grep "^ZSH_THEME=" "$ZSHRC" | cut -d'"' -f2)
        echo "  Theme: $theme"

        # Show plugins
        plugins=$(grep "^plugins=" "$ZSHRC" | sed 's/plugins=(//' | sed 's/)//')
        echo "  Plugins: $plugins"
    else
        print_warning ".zshrc not found"
    fi

    echo ""
    print_info "Installer location: $INSTALLER"
}

run_installer() {
    print_header
    echo ""

    if [ ! -f "$INSTALLER" ]; then
        print_error "Installer script not found: $INSTALLER"
        exit 1
    fi

    print_info "Running Oh-My-Zsh installer..."
    echo ""

    bash "$INSTALLER"
}

edit_zshrc() {
    if [ ! -f "$ZSHRC" ]; then
        print_error ".zshrc not found. Run 'install' first."
        exit 1
    fi

    print_info "Opening .zshrc for editing..."
    ${EDITOR:-nano} "$ZSHRC"
    print_success ".zshrc updated"
    print_info "Reload with: source ~/.zshrc"
}

reload_config() {
    if [ ! -f "$ZSHRC" ]; then
        print_error ".zshrc not found"
        exit 1
    fi

    print_info "Reloading .zshrc..."

    # Check if we're in zsh
    if [ -n "$ZSH_VERSION" ]; then
        source "$ZSHRC"
        print_success "Configuration reloaded"
    else
        print_warning "Not running in Zsh. Start Zsh with: exec zsh"
    fi
}

list_themes() {
    print_header
    echo ""

    if [ ! -d "$HOME/.oh-my-zsh/themes" ]; then
        print_error "Oh-My-Zsh not installed"
        exit 1
    fi

    print_info "Available themes:"
    echo ""

    ls -1 "$HOME/.oh-my-zsh/themes" | sed 's/.zsh-theme$//' | column

    echo ""
    print_info "Current theme: $(grep "^ZSH_THEME=" "$ZSHRC" 2>/dev/null | cut -d'"' -f2)"
    print_info "To change theme, edit .zshrc: $0 edit"
    print_info "Or manually: sed -i 's/ZSH_THEME=\".*\"/ZSH_THEME=\"theme-name\"/' ~/.zshrc"
}

list_plugins() {
    print_header
    echo ""

    if [ ! -d "$HOME/.oh-my-zsh/plugins" ]; then
        print_error "Oh-My-Zsh not installed"
        exit 1
    fi

    print_info "Available built-in plugins:"
    echo ""

    ls -1 "$HOME/.oh-my-zsh/plugins" | column

    echo ""

    if [ -d "$HOME/.oh-my-zsh/custom/plugins" ]; then
        print_info "Custom plugins:"
        echo ""
        ls -1 "$HOME/.oh-my-zsh/custom/plugins" | column
        echo ""
    fi

    print_info "Current plugins: $(grep "^plugins=" "$ZSHRC" 2>/dev/null | sed 's/plugins=(//' | sed 's/)//')"
    print_info "To change plugins, edit .zshrc: $0 edit"
}

backup_config() {
    if [ ! -f "$ZSHRC" ]; then
        print_error ".zshrc not found"
        exit 1
    fi

    backup_file="$ZSHRC.backup.$(date +%Y%m%d_%H%M%S)"
    cp "$ZSHRC" "$backup_file"

    print_success "Backed up .zshrc to: $backup_file"
}

restore_config() {
    print_header
    echo ""

    print_info "Available backups:"
    backups=$(ls -t "$HOME"/.zshrc.backup.* 2>/dev/null)

    if [ -z "$backups" ]; then
        print_warning "No backups found"
        exit 0
    fi

    echo "$backups" | nl
    echo ""

    echo -n "Enter backup number to restore (or 'q' to quit): "
    read -r choice

    if [ "$choice" = "q" ]; then
        print_info "Cancelled"
        exit 0
    fi

    backup_to_restore=$(echo "$backups" | sed -n "${choice}p")

    if [ -z "$backup_to_restore" ]; then
        print_error "Invalid selection"
        exit 1
    fi

    # Backup current before restoring
    if [ -f "$ZSHRC" ]; then
        cp "$ZSHRC" "$ZSHRC.backup.before_restore.$(date +%Y%m%d_%H%M%S)"
    fi

    cp "$backup_to_restore" "$ZSHRC"
    print_success "Restored: $backup_to_restore"
    print_info "Reload with: source ~/.zshrc"
}

uninstall() {
    print_header
    echo ""

    print_warning "This will remove Oh-My-Zsh and restore your previous .zshrc"
    echo -n "Are you sure? (y/N): "
    read -r response

    if [[ ! "$response" =~ ^[Yy]$ ]]; then
        print_info "Cancelled"
        exit 0
    fi

    if [ -d "$HOME/.oh-my-zsh" ]; then
        # Backup current config
        backup_config

        # Run oh-my-zsh uninstaller if it exists
        if [ -f "$HOME/.oh-my-zsh/tools/uninstall.sh" ]; then
            sh "$HOME/.oh-my-zsh/tools/uninstall.sh"
        else
            rm -rf "$HOME/.oh-my-zsh"
            print_success "Removed Oh-My-Zsh directory"
        fi
    else
        print_warning "Oh-My-Zsh not installed"
    fi
}

show_help() {
    print_header
    echo ""
    echo "Usage: $0 [command]"
    echo ""
    echo "Commands:"
    echo "  status          Show current Zsh/Oh-My-Zsh status"
    echo "  install         Run the Oh-My-Zsh installer"
    echo "  edit            Edit .zshrc configuration"
    echo "  reload          Reload .zshrc (must be in Zsh)"
    echo "  themes          List available themes"
    echo "  plugins         List available plugins"
    echo "  backup          Backup current .zshrc"
    echo "  restore         Restore from a previous backup"
    echo "  uninstall       Remove Oh-My-Zsh"
    echo "  help            Show this help message"
    echo ""
    echo "Examples:"
    echo "  $0 status           # Check installation status"
    echo "  $0 install          # Install Oh-My-Zsh"
    echo "  $0 themes           # See available themes"
    echo "  $0 edit             # Customize configuration"
}

# Main script logic
case "${1:-status}" in
    status)
        show_status
        ;;
    install)
        run_installer
        ;;
    edit)
        edit_zshrc
        ;;
    reload)
        reload_config
        ;;
    themes)
        list_themes
        ;;
    plugins)
        list_plugins
        ;;
    backup)
        backup_config
        ;;
    restore)
        restore_config
        ;;
    uninstall)
        uninstall
        ;;
    help|--help|-h)
        show_help
        ;;
    *)
        print_error "Unknown command: $1"
        echo ""
        show_help
        exit 1
        ;;
esac
